<odoo>
    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">payment.transaction.form</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <form string="Payment Transaction">
                <sheet>
                    <group>
                        <field name="amount"/>
                        <field name="state"/>
                        <field name="payment_method"/>
                        <field name="dlocal_transaction_id"/>
                    </group>
                    <footer>
                        <button string="Confirm Payment" type="object" name="confirm_payment" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
